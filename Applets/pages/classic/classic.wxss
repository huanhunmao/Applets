.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    /* 整体居中 */
    align-items: center;
    /* 内容两端对齐 */
    justify-content: space-between;
    /* 上下边线 */
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

